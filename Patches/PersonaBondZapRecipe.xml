<?xml version="1.0" encoding="utf-8"?>
<Patch>
 
    <Operation Class="PatchOperationFindMod">
    <mods><li>Persona Bond Forge</li></mods>
    <match Class="PatchOperationSequence">
    <operations>
    <li Class="PatchOperationAdd">
    <xpath>/Defs</xpath>
    <value>

<!--Recipe for Zap guns and wavegun splitting-->

<RecipeDef>
	<defName>CODZP_BondMaxWavegunSplit</defName>
	<label>Split Persona Max Wavegun</label>
	<description>Split the Persona Wavegun into two Persona's Zapguns!</description>
	<uiIconThing>CODZP_Icon_PAPZapguns</uiIconThing>
	<soundWorking>CodZP_Work_Wavegun_Separate</soundWorking>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>CodZP_Gun_Wavegun-Persona</li>
				</thingDefs>
			</filter>
			<count>1</count>
		</li>
	</ingredients>
	<products>
		<CODZP_Gun_Zapgun_Blue-Persona>1</CODZP_Gun_Zapgun_Blue-Persona>
		<CODZP_Gun_Zapgun_Red-Persona>1</CODZP_Gun_Zapgun_Red-Persona>
	</products>
	<workAmount>50</workAmount>
	<workSkill>Crafting</workSkill>
	<recipeUsers>
		<li>CodZP_Wond-R-Works</li>
		<li>CraftingSpot</li>
	</recipeUsers>
</RecipeDef>

    </value>
    </li>
    </operations>
    </match>
    </Operation>
</Patch>